<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <View
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#2E7D32" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/btnMainBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Go back"
            android:src="@drawable/ic_arrow_back"
            app:tint="#FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMainExit"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Exit Group"
            android:textColor="#FFCDD2"
            android:textSize="12sp"
            app:icon="@drawable/ic_exit_to_app"
            app:iconTint="#FFCDD2" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvGroupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Group Name"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvGroupCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code: GROUP123"
                android:textColor="#BDBDBD"
                android:textSize="14sp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="24dp"
                    android:weightSum="2">
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="You are owed" android:textSize="12sp" />
                        <TextView android:id="@+id/tvYouAreOwed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$0.00" android:textColor="#2E7D32" android:textSize="22sp" android:textStyle="bold" />
                    </LinearLayout>
                    <View android:layout_width="1dp" android:layout_height="40dp" android:background="#EEEEEE" />
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:paddingStart="20dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="You owe" android:textSize="12sp" />
                        <TextView android:id="@+id/tvYouOwe" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$0.00" android:textColor="#D32F2F" android:textSize="22sp" android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="75dp" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAddExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="85dp"
        android:backgroundTint="#2E7D32"
        android:text="Add Expense"
        android:textColor="#FFFFFF"
        app:icon="@android:drawable/ic_input_add"
        app:iconTint="#FFFFFF" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        app:itemIconTint="#2E7D32"
        app:itemTextColor="#2E7D32"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>